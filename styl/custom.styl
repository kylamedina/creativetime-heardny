@keyframes bounceInDown 
	0% 
		opacity: 0;
		transform: translateY(-2000px);
	
	
	60% 
		opacity: 1;
		transform: translateY(30px);
	
	
	80% 
		transform: translateY(-50px);
	
	
	100% 
		transform: translateY(0);
	

object
	animation-name: bounceInDown
	animation-duration: 2s
.grid
	span:nth-child(2) object
		animation-delay 0.1s
	span:nth-child(3) object
		animation-delay 0.2s
	span:nth-child(4) object
		animation-delay 0.3s
	span:nth-child(5) object
		animation-delay 0.5s
	span:nth-child(6) object
		animation-delay 0.6s
	span:nth-child(7) object
		animation-delay 0.7s
	span:nth-child(8) object
		animation-delay 0.8s
	span:nth-child(9) object
		animation-delay 0.9s
/*animation to show the footer, which will simply up its opacity to 1*/
@keyframes fadeIn
	0%
		opacity 0
	100%
		opacity 1
@keyframes slideLeft
	from
		margin-left 0

.frame
	width 960px
	height 540px
	overflow-x scroll
	overflow-y: hidden
	.creativetime
		width 3000px
		height 100%
		position relative
	embed, object
		width 100%
		height 400px
		vertical-align: middle
		margin-top 20px
		g
			transition all 0.3s
			&:hover
				transition all 0.3s
	.nav
		width 100%
		background white
		position absolute
		height 70px
		bottom 0
		clearfix()
		.wrapper
			position fixed
			left 0
			margin 0 30px
			padding 20px 0
			width 900px



.grid
	clearfix()
	span
		col 1

g
	image
		width 100%

span
	&#I
		width 5%
	&#A, &#R
		width 11%



nav
	nav(true)
	display inline-block
	vertical-align middle
	li
		border 2px solid transparent
		border-radius 50%
		text-align center
		line-height 1.3
		animation: fadeIn 1s
		cursor pointer 

arrows()
	background-size 10px 39px

.arrow
	display inline-block
	size	11px 39px
	vertical-align middle
	&.left
		background url('assets/img/arrow_left.svg') no-repeat
		arrows()
		
	&.right
		background url('assets/img/arrow_right.svg') no-repeat
		arrows()
		margin-left 70px

.active
	border 2px solid pink
	border-radius 50%

::-webkit-scrollbar
	width: 7px
	height: 7px
	cursor: pointer

::-webkit-scrollbar-track
	background-color: #ddd
	border-radius: 10px

::-webkit-scrollbar-thumb
	border-radius: 10px
	background-color: pink

#overlay
	width 960px
	height 470px
	display:none;
	background:rgba(0, 0, 0,0.5);
	position:absolute;
	z-index:999;
	pointer-events:none;
#popup  
	position:absolute;
	transform: scale(0,0);
	-ms-transform: scale(0,0);
	-webkit-transform: scale(0,0);
	width:auto;
	display:block;
	border:1px solid rgba(240, 83, 122,1);
	background:#fff
	padding:5px;
	box-shadow: 0 0 5px rgba(0,0,0,0.3);
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px; 
#close
	pointer-events:auto;

.scaled-img
	max-height 450px
	width auto