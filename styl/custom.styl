body
	width 5000px
.grid
	clearfix()
	span
		col 1
embed
	width 100%
	height 600px
	padding 3rem 0 0 2rem
	g
		transition all 0.3s
		&:hover
			transition all 0.3s
			stroke pink


span
	&#I
		width 5%
	&#A
		width 10%

	&#gap
		col 6
		height 600px
	svg
		margin 0 auto
.nav
	width 100%
	background white
	fixed bottom left
	padding-bottom 30px
	.wrapper
		margin-left 90px
		margin-top 30px
		width 900px

nav
	nav(true)
	display inline-block
	vertical-align middle
	li
		border 2px solid white
		text-align center
		line-height 1.3

arrows()
	background-size 10px 39px

.arrow
	display inline-block
	size  10px 39px
	vertical-align middle
	&.left
		background url('assets/img/arrow_left.svg') no-repeat
		arrows()
		
	&.right
		background url('assets/img/arrow_right.svg') no-repeat
		arrows()
		margin-left 70px

.active
	border 2px solid pink
	border-radius 50%

