body
	width 4000px
.grid

	span
		col 1
svg, span img
	width auto
	height 600px
	padding 2rem 0 0 2rem
span
	&#I
		width 5%
	&#hash
		width 12%
	&#H
		width 12%
	&#E
		width 11%
	&#A
		width 13.5%
	&#R
		width 12%
	&#D
		width 12%
.nav
	width 100%
	background white
	fixed bottom left
	padding-bottom 50px
	.wrapper
		margin-left 90px
		margin-top 30px

nav
	nav(true)
	display inline-block
	vertical-align middle
	li
		border 2px solid white
		text-align center
		line-height 1.3

arrows()
	background-size 10px 39px

.arrow
	display inline-block
	size  10px 39px
	vertical-align middle
	&.left
		background url('assets/img/arrow_left.svg') no-repeat
		arrows()
		
	&.right
		background url('assets/img/arrow_right.svg') no-repeat
		arrows()
		margin-left 70px

.active
	border 2px solid pink
	border-radius 50%

