.grid
	clearfix()
	span
		col 1

g
	image
		width 100%

::-webkit-scrollbar
	width: 7px
	height: 7px
	cursor: pointer

::-webkit-scrollbar-track
	background-color: #ddd
	border-radius: 10px

::-webkit-scrollbar-thumb
	border-radius: 10px
	background-color: #C4290D			


span
	&#I
		width 5%
	&#A
		width 10%

	svg
		margin 0 auto


nav
	nav(true)
	display inline-block
	vertical-align middle
	li
		border 2px solid transparent
		border-radius 50%
		text-align center
		line-height 1.3

arrows()
	background-size 10px 39px

.arrow
	display inline-block
	size  10px 39px
	vertical-align middle
	&.left
		background url('assets/img/arrow_left.svg') no-repeat
		arrows()
		
	&.right
		background url('assets/img/arrow_right.svg') no-repeat
		arrows()
		margin-left 70px

.active
	border 2px solid pink
	border-radius 50%

