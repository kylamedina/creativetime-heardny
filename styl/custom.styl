body

.frame
	width 960px
	height 100%
	overflow-x: scroll
	overflow-y: scroll
	.creativetime
		width 6000px
		height 100%
		position relative

	embed, object
		width 100%
		height 100%
		max-height 700px
		vertical-align: top
		g
			transition all 0.3s
			&:hover
				transition all 0.3s
	.nav
		width 100%
		background white
		margin-top 20px
		//position fixed
		height 70px
		bottom 0
		clearfix()
		.wrapper
			margin 20px 30px
			width 900px
			position fixed
